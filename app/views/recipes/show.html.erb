<h1><%= @recipe.name %></h1>

<h2>Ingredients</h2>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
      <% end %>
    </ul>

  <%= link_to "Edit This Recipe", edit_recipe_path(@recipe) %><BR>
  <%= link_to "Delete This Recipe", recipe_path(@recipe), method: :delete %><BR>
  <%= link_to "View All Recipes", recipes_path %>
